# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# API Keys (Replace with your actual keys)
GTFS_API_KEY=your_gtfs_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
TRANSIT_API_KEY=your_transit_api_key_here

# External API URLs
GTFS_API_BASE_URL=https://api.at.govt.nz/gtfs
WEATHER_API_BASE_URL=https://api.weatherapi.com/v1
TRANSIT_REALTIME_URL=https://api.at.govt.nz/gtfs-rt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching (in milliseconds)
CACHE_TTL_ARRIVALS=30000
CACHE_TTL_WEATHER=600000
CACHE_TTL_VEHICLES=15000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Database (if needed in future)
# DATABASE_URL=your_database_connection_string
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bus_schedule
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Security
CORS_ENABLED=true
TRUST_PROXY=false

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
